{
  "compilerOptions": {
    "baseUrl": "./",
    "allowJs": true,
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "outDir": "./dist-electron/preload",
    "rootDir": "./src",
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,// 跳过库检查
    "noImplicitAny": true,
    "noEmit": false,
    "paths": {
      "@/*": ["./src/*"]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ]
  },
  "types": ["node"],
  "include": ["src"],
  "references": [
    { "path": "./tsconfig.node.json" }
  ]
}
